{
  "name": "devel-freezer",
  "version": "1.0.0",
  "description": "Comment on newly created pull requests, when project is in development freeze",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "vitest run --coverage",
    "update-snapshots": "vitest run --update",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redhat-plumbers-in-action/devel-freezer.git"
  },
  "keywords": [
    "actions",
    "node",
    "development-tool",
    "development-freeze"
  ],
  "author": "jamacku@redhat.com",
  "license": "MIT",
  "packageManager": "yarn@3.6.0",
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@octokit/rest": "^19.0.3",
    "@probot/adapter-github-actions": "^3.1.1",
    "class-validator": "^0.14.0"
  },
  "devDependencies": {
    "@octokit/webhooks": "12.0.1",
    "@octokit/webhooks-types": "7.1.0",
    "@types/node": "18.16.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "5.54.0",
    "@vercel/ncc": "0.36.1",
    "@vitest/coverage-c8": "0.32.2",
    "@vitest/coverage-v8": "^0.32.2",
    "eslint": "8.43.0",
    "eslint-plugin-prettier": "4.2.1",
    "js-yaml": "4.1.0",
    "nock": "13.3.1",
    "prettier": "2.8.8",
    "ts-node": "10.9.1",
    "typescript": "5.1.6",
    "vitest": "0.32.2"
  }
}
